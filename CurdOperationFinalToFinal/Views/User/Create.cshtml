    </div>*@
  <div class="d-flex flex-row">

    <div class="p-2">
        <label for="firstName">First Name</label>
        <input type="text" class="form-control" id="firstName" asp-for="userData.firstName" placeholder="Enter First Name">
    </div>
    <div class="p-2">
        <label for="lastName">Last Name</label>
        <input type="text" class="form-control" id="lastName" asp-for="userData.lastName" placeholder="Enter Last Name">
    </div>
    
    
    <div class="p-2">
        <label class="control-label"></label>
        <label for="datepicker">Birth Date</label>
        <input id="datepicker" type="date" class="form-control" asp-for="userData.dob" value="@DateTime.Now.ToString("dd-MM-yyyy")" />
        <span class="text-danger"></span>
    </div>
   
   
    <div class="p-2">
        <label for="phoneNumber">Contact Number</label>
        <input type="text" class="form-control" id="phoneNumber" asp-for="userData.phoneNumber" placeholder="Enter Contact Number" required maxlength="10">
    </div>
  </div>
    <div class="col-md-6 form-floating">
        <input type="text" class="form-control" id="phoneNumber" asp-for="userData.Email" placeholder="Enter Contact Number">
        <label for="phoneNumber">Email Address</label>
    </div>
    <div class="form-check">
        <label class="form-check-label" for="flexCheckDefault">
            Is Active?
        </label>
        <input class="form-check-input" type="checkbox" asp-for="userData.isActive" value="" id="flexCheckDefault">
    </div>
    <div class="form-group col-md-8">
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" asp-for="userData.Gender" value="1">
            <label class="form-check-label" for="inlineRadio1">Male</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" asp-for="userData.Gender" value="2">
            <label class="form-check-label" for="inlineRadio2">Female</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" asp-for="userData.Gender" value="3">
            <label class="form-check-label" for="inlineRadio3">Other</label>
        </div>
    </div>
